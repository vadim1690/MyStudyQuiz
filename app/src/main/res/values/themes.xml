<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyStudyQuiz" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_sky</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_blue</item>
        <item name="colorSecondaryVariant">@color/primary_blue_sky</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>


        <item name="fontFamily">@font/nunitosans_semibold</item>


    </style>




    <style name="MyButtonBigSize" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">@color/primary_blue</item>

    </style>

    <style name="MyButtonSmallSize" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">@color/primary_blue</item>

    </style>

    <style name="MyBooleanButtonsAnswers" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">90dp</item>
        <item name="iconSize">35dp</item>
        <item name="iconTint">@null</item>
        <item name="iconGravity">end</item>
        <item name="backgroundTint">@color/primary_blue_soft</item>

    </style>




</resources>